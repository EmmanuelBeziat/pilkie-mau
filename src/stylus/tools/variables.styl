:root
	// Font Family
	--font-primary Montserrat, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", sans-serif
	--font-secondary -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", sans-serif
	--font-hero 'Signature Collection', var(--font-secondary)

	// Font Size
	--font-size-root 16px
	--font-size-base 1.25rem
	--font-size-xs .85rem
	--font-size-sm 1rem
	--font-size-md 1.25rem
	--font-size-lg 1.5rem
	--font-size-xl 2.25rem
	--font-size-xxl 4rem
	--font-size-xxxl 6rem
	--font-size-hero-title calc(48px + (64 - 24) * ((100vw - 320px) / (1600 - 320)))

	--line-height-root 1.45em

	// Headings
	--heading--font-family var(--font-secondary)
	--heading--size var(--font-size-xxl)

	// Colors
	--color-white #fff
	--color-dark-gray #28303d
	--color-gray #39414d
	--color-light-gray #f0f0f0
	--color-white-50 rgba(255, 255, 255, 0.5)
	--color-white-90 rgba(255, 255, 255, 0.9)
	--color-primary var(--color-dark-gray)

	// Transitions
	--transition .25s ease-in-out

	// Sizes
	--viewport-height 100vh

	// Components
	--menu-button-display none
	--size-admin-bar 32px

	@media (max-width 60rem)
		--menu-button-display block
		--font-size-xl 1.25rem
		--font-size-xxl 2.5rem
		--font-size-xxxl 3.5rem

	@media (max-width 782px)
		--size-admin-bar 46px

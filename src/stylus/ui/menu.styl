.primary-navigation .menu-wrapper
.social-navigation .menu-wrapper
	list-style none
	margin 0
	padding 0
	display flex
	gap 1rem

.menu-button-container
	.button
		background none
		border none
		padding 0
		margin 0
		cursor pointer
		vertical-align top
		display block
		width 42px
		aspect-ratio 1 / 1

		svg
			width 100%
			pointer-events none

		.line
			fill none
			stroke var(--color-white)
			stroke-width 6
			transition stroke-dasharray 600ms cubic-bezier(0.4, 0, 0.2, 1), 			stroke-dashoffset 600ms cubic-bezier(0.4, 0, 0.2, 1)

		.line1
			stroke-dasharray 60 207
			stroke-width 6

		.line2
			stroke-dasharray 60 60
			stroke-width 6

		.line3
			stroke-dasharray 60 207
			stroke-width 6

		&.opened
			.line1
				stroke-dasharray 90 207
				stroke-dashoffset -134
				stroke-width 6

			.line2
				stroke-dasharray 1 60
				stroke-dashoffset -30
				stroke-width 6

			.line3
				stroke-dasharray 90 207
				stroke-dashoffset -134
				stroke-width 6

.category-menu-container
	padding 2rem 0

#category-menu-list
	display flex
	margin 0
	padding 0
	list-style none
	justify-content center
	gap 2rem

	& > .menu-item
		& > a
			font-size var(--font-size-md)
			font-weight 300
			text-transform uppercase
			text-decoration none
			display flex
			flex-direction column
			line-height 1

			&::before
			&::after
				--opacity 0
				content ""
				background var(--color-white)
				height 1px
				transform translateY(-0.075em)
				opacity var(--opacity)
				transform var(--position)
				transition var(--transition)
				transform-origin var(--origin)

			&::before
				margin-bottom .45em
				--position scaleX(0)
				--origin 0 0

			&::after
				margin-top .45em
				--position scaleX(0)
				--origin 100% 0

		&:hover > a
			&::before
				--opacity 1
				--position scaleX(.55)

			&::after
				--opacity 1
				--position scaleX(.55)

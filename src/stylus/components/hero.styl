.hero
	min-height var(--viewport-height)
	display grid
	grid-template-columns 1fr
	grid-template-rows 2fr 3fr
	gap 2rem

.hero-picture
	grid-area 1 / 1 / 3 / 2
	overflow hidden
	position relative

	img
		position absolute
		min-width 100%
		min-height 100%
		vertical-align top
		object-fit cover

.hero-title
	position relative
	padding 1rem 2rem
	grid-area 1 / 1 / 2 / 2
	display flex
	flex-direction column
	justify-content flex-end
	align-items center
	text-align center

	h1
		font 400 var(--font-size-hero-title)/1 var(--font-hero), var(--font-secondary)
		margin 0
		position relative
		padding-top 6rem

	h1::after
		// content ""
		position absolute
		top 0
		left .25em
		right .25em
		bottom 0
		z-index -1

	p
		margin 0
		display inline-block
		padding 0 1rem .5rem
		font-size var(--font-size-xl)
		line-height 1

.hero-color-white
	.hero-picture img
		filter brightness(.5)

	h1
	p
		color var(--color-white)

	h1
		text-shadow 0 0 .15em rgba(0, 0, 0, .8), 0 0 5px rgba(0, 0, 0, .5)


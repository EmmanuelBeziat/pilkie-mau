.hero-navigation
	grid-area 2 / 1 / 3 / 2
	position relative


.categories-navigation
	padding 2rem 0
	display flex
	flex-wrap wrap
	justify-content center
	gap 1rem 3rem

	@media (max-width 60rem)
		flex-direction column
		align-items center
		gap 0

	& > a
		font-size var(--font-size-lg)
		font-weight 200
		text-transform uppercase
		text-decoration none
		display flex
		text-shadow 0 0 5px var(--color-dark-gray)
		flex-direction column
		line-height 1

		&::before
		&::after
			--opacity 0
			content ""
			background var(--color-white)
			height 1px
			box-shadow 0 0 5px var(--color-dark-gray)
			opacity var(--opacity)
			transform translateY(-0.075em)
			transform var(--position)
			transition var(--transition)
			transform-origin var(--origin)

		&::before
			margin-bottom .45em
			--position scaleX(0)
			--origin 0 0

		&::after
			margin-top .45em
			--position scaleX(0)
			--origin 100% 0

		&:hover
			&::before
				--opacity 1
				--position scaleX(.55)

			&::after
				--opacity 1
				--position scaleX(.55)
